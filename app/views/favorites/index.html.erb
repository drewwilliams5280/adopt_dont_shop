<div class="pageheader">
  <h1>Favorite Pets</h1>
  <h3>Your place to find love</h3>
</div>
<div class="right-nav", id = "favorites_right_nav">
  <section style="padding:20px;text-align:center;">
  <%= link_to 'Remove All Favorites', "/favorites", :method => :delete %>
      <h3> Pending Applications </h3>
      <% @applications.each do |application| %>
      <p><%= link_to Pet.find(application.pet_id).name, "pets/#{application.pet_id}"%></p>
      <% end %>
    </section>
</div>
<div id ="favorites" >
<% if session[:favorites] %>
    <% session[:favorites].each do |pet_id| %>
      <section id="pet-<%= pet_id %>">
        <%= link_to "#{Pet.find(pet_id).name}", "/pets/#{pet_id}" %>
        <%= link_to 'Remove', "/favorites/#{pet_id}", :method => :delete %>
        <br>
        <%= image_tag("#{Pet.find(pet_id).image_path}", width: "200") %><br>
      </section>
    <% end %>
  </div>
<% else %>
<% end %>
