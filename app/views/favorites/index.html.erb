<div class="pageheader">
  <h1>Favorite Pets</h1>
  <h3>Your place to find love</h3>
</div>
<div class="right-nav">
  <%= link_to 'Remove All Favorites', "/favorites", :method => :delete %>
</div>
<% if session[:favorites] %>
  <div><% session[:favorites].each do |pet_id| %>
      <section id="pet-<%= pet_id %>">
        <%= link_to "#{Pet.find(pet_id).name}", "/pets/#{pet_id}" %>
        <%= link_to 'Remove', "/favorites/#{pet_id}", :method => :delete %>
        <br>
        <%= image_tag("#{Pet.find(pet_id).image_path}", width: "200") %><br>
      </section>
    <% end %>
  </div>
<% else %>
<% end %>
