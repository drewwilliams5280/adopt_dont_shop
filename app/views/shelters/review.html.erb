<center>
  <% if flash[:notice] %>
  <div style='color:red;font-size:40px;' class="notice"><%= flash[:notice] %></div>
  <% end %>
<%= form_tag "/shelters/#{@shelter.id}/review" do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %><br>
  <%= label_tag :rating_out_of_5 %>
  <%= text_field_tag :rating %><br>
  <%= label_tag :review %>
  <%= text_field_tag :content %><br>
  <%= label_tag :picture_url %>
  <%= text_field_tag :picture %>
<br>
  <%= submit_tag 'Create Review' %>
<% end %>
</center>
