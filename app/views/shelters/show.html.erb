<div class="pageheader">
  <h1><%= @shelter.name %></h1>
  <h3>Adopt, Don't Shop: Make a Difference</h3>
</div>
<div class="show">
<p><%= @shelter.address %></p>
<p><%= "#{@shelter.city}, #{@shelter.state}" %></p>
<p><%= @shelter.zip %></p>
<h5><a href="/shelters/<%= @shelter.id %>/pets">View Pets</a></h5>
<h5><a href="/shelters/<%= @shelter.id %>/edit">Update Shelter</a></h5>
<h5><a href="/shelters/<%= @shelter.id %>/delete">Delete Shelter</a></h5>
</div>
<center>
  <% if flash[:notice] %>
  <div style='color:red;font-size:40px;' class="notice"><%= flash[:notice] %></div>
  <% end %>
<div style="width:300px;height:600px;line-height:3em;overflow:scroll;padding:5px;background-color:#FCFADD;color:#714D03;border:4px double #DEBB07;">
<% @shelter.reviews.each do |review| %>
<p>Title: <%= review.title %><br>
Rating (Out of 5): <%= review.rating %><br>
Review: <%= review.content %><br>
<img src="<%= review.picture %>" alt="<%= review.title %>" height="180"></p>
<%= link_to 'Edit Review', "/shelters/#{@shelter.id}/#{review.id}/edit" %>
<% end %>
</div>
<%= link_to 'New Review', "/shelters/#{@shelter.id}/review" %>
</center>
