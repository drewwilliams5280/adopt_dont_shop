<div class="pageheader">
  <h1>Colorado Shelter Pets</h1>
  <h3>Adopt, Don't Shop: Make a Difference</h3>
</div>
<br>
<center>
  <form method="patch" action="/pets">
    <button type="submit" name="adoptable" value="true" class="link-button">
      See only adoptable pets
    </button>
  </form>
  <form method="patch" action="/pets">
    <button type="submit" name="adoptable" value="false" class="link-button">
      See only pets pending adoption
    </button>
  </form>
</center>
<br>
<div class="row">
<% @pets.sort_by {|pet| pet.status}.each do |pet| %>
  <div class="column">
    <img src="<%= pet.image_path %>" alt="<%= pet.name %>" height="180">
    <h2>Name: <a href="/pets/<%= pet.id %>"><%= pet.name %></a></h2>
    <h4>Located at: <a href="/shelters/<%= pet.shelter.id %>"><%= pet.shelter.name %></a></h4>
    <p>Approximate age: <%= pet.approximate_age%></p>
    <p>Sex: <%= pet.sex%></p>
    <h5><a href="/pets/<%= pet.id %>/edit">Edit</a></h5>
    <h5><a href="/pets/<%= pet.id %>/delete" class="confirmation">Delete</a></h5>
     <script type="text/javascript">
       var elems = document.getElementsByClassName('confirmation');
       var confirmIt = function (e) {
           if (!confirm('Are you sure?')) e.preventDefault();
         };
         for (var i = 0, l = elems.length; i < l; i++) {
           elems[i].addEventListener('click', confirmIt, false);
         }
      </script>
    <br><br>
  </div>
<% end %>
</div>
