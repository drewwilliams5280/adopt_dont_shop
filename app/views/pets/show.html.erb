<div class="pageheader">
  <h1><%= @pet.name %></h1>
  <h3><%= @pet.description %></h3>
</div>

<div class="show">
<img src="<%= @pet.image_path %>" alt="<%= @pet.name %>" width="400">
<p>Approximate age: <%= @pet.approximate_age%></p>
<p>Sex: <%= @pet.sex %></p>
<p>Adoption Status: <%= @pet.status %></p>
<h5><a href="/pets/<%= @pet.id %>/edit">Update Pet</a></h5>
<h5><a href="/pets/<%= @pet.id %>/delete">Delete Pet</a></h5>
</div>
